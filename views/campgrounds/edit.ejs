<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;font-weight:600">Edit a New Campground</h1>
        <div style="width:30%; margin:35px auto;">
            <form action="/campgrounds/<%= campground._id  %>?_method=PUT" method="POST">
                <div class="form-group">    
                    <input class="form-control" type="text" placeholder="name" name="name" value="<%= campground.name %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="description" value="<%= campground.description %>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="number" placeholder="price" name="price" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit</button>
                     <br>
                <br>
            <a href="/campgrounds/<%= campground.id %>">Go back</a>
                <br>
                <br>
                </div>
            </form>
               
        </div>        
    </div>
</div>
<% include ../partials/footer %>